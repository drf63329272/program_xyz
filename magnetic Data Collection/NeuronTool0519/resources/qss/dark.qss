    image: url(down_arrow.png);
}

QHeaderView::up-arrow {
    image: url(up_arrow.png);
}*/

/* Hover */
QRadioButton:hover, QCheckBox:hover, QComboBox::hover {
    background: #58616B;
}

/* Pressed */
QRadioButton:pressed, QCheckBox:pressed, QComboBox::pressed {
    background: #34393F;
}

/* Focus */
QLineEdit:focus, QFrame:focus {
    border-width: 2px;
}

/* Scroll bar */
QScrollBar:horizontal {
    height: 16px;
    margin: 0px 18px 0 18px;
    border: 1px solid #222528;
    background: #34393F;
}

QScrollBar::handle:horizontal {
    min-height: 16px;
    background: #58616B;
}

QScrollBar::add-line:horizontal {
    width: 16px;
    subcontrol-position: right;
    subcontrol-origin: margin;
    border: 1px solid #222528;
    background: #464D55;
}

QScrollBar::sub-line:horizontal {
    width: 16px;
    subcontrol-position: left;
    subcontrol-origin: margin;
    border: 1px solid #222528;
    background: #464D55;
}

QScrollBar:left-arrow:horizontal {
    image: url(:/qss/resources/qss/left_arrow.png);
}

QScrollBar::right-arrow:horizontal {
    image: url(:/qss/resources/qss/right_arrow.png);
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

QScrollBar:vertical {
    width: 16px;
    margin: 18px 0 18px 0;
    border: 1px solid #222528;
    background: #34393F;
}

QScrollBar::handle:vertical {
    min-height: 16px;
    background: #58616B;
}

QScrollBar::add-line:vertical {
    height: 16px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
    border: 1px solid #222528;
    background: #464D55;
}

QScrollBar::sub-line:vertical {
    height: 16px;
    subcontrol-position: top;
    subcontrol-origin: margin;
    border: 1px solid #222528;
    background: #464D55;
}

QScrollBar::up-arrow:vertical {
    image: url(:/qss/resources/qss/up_arrow.png);
}

QScrollBar::down-arrow:vertical {
    image: url(:/qss/resources/qss/down_arrow.png);
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}
