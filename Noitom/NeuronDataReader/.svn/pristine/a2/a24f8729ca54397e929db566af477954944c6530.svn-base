<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="87,73,0,0" TextWrapping="Wrap" Text="IP:" VerticalAlignment="Top"/>
        <TextBox Name="txtIP" HorizontalAlignment="Left" Height="23" Margin="106,72,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="74,108,0,0" TextWrapping="Wrap" Text="Port:" VerticalAlignment="Top"/>
        <TextBox Name="txtPort" HorizontalAlignment="Left" Height="23" Margin="106,107,0,0" TextWrapping="Wrap" Text="7001" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="87,150,0,0" TextWrapping="Wrap" Text="Received Data Count:" VerticalAlignment="Top"/>
        <TextBlock Name="txtReceivingCounter" Margin="141,170,163,67" TextWrapping="Wrap" Text="0" FontSize="48" TextAlignment="Center"/>
        <Button Name="btnConnect" Content="Connect" HorizontalAlignment="Left" Margin="300,73,0,0" VerticalAlignment="Top" Width="95" Height="50" Click="btnConnect_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="320,138,0,0" TextWrapping="Wrap" Text="Socket status:" VerticalAlignment="Top"/>
        <TextBlock Name="txtSockStatus" HorizontalAlignment="Left" Margin="342,153,0,0" TextWrapping="Wrap" Text="Disconnected" VerticalAlignment="Top"/>

    </Grid>
</Window>
